{
  "name": "magma-language-support",
  "displayName": "MAGMA Language Support",
  "description": "%extension.description%",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "usuke1726",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/usuke1726/MagmaLanguageSupport.git"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "magma",
        "aliases": [
          "Magma",
          "magma"
        ],
        "icon": {
          "light": "./images/icon-magma-light.svg",
          "dark": "./images/icon-magma-dark.svg"
        },
        "extensions": [
          ".m",
          ".mag",
          ".magma",
          "..magmarc",
          "..magmarc-dev"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "spec",
        "aliases": [
          "Magma Spec",
          "spec"
        ],
        "extensions": [
          ".spec"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "magma",
        "scopeName": "source.magma",
        "path": "./syntaxes/magma.tmLanguage"
      },
      {
        "language": "spec",
        "scopeName": "source.magma.spec",
        "path": "./syntaxes/spec.tmLanguage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MAGMA Language Support",
      "properties": {
        "MagmaLanguageSupport.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableAutoCompletion%"
        },
        "MagmaLanguageSupport.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableHover%"
        },
        "MagmaLanguageSupport.enableDefinition": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableDefinition%"
        },
        "MagmaLanguageSupport.onChangeDelay": {
          "type": "integer",
          "default": 1000,
          "description": "%config.onChangeDelay%"
        },
        "MagmaLanguageSupport.functionCompletionType": {
          "type": "string",
          "enum": [
            "snippet",
            "original",
            "none"
          ],
          "default": "snippet",
          "description": "%config.functionCompletionType%"
        },
        "MagmaLanguageSupport.warnsWhenRedefiningIntrinsic": {
          "type": "boolean",
          "default": true,
          "description": "%config.warnsWhenRedefiningIntrinsic%"
        }
      }
    },
    "commands": [
      {
        "command": "extension.magmaLoader.run",
        "title": "MagmaLoader を実行",
        "category": "Magma",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == magma",
          "command": "extension.magmaLoader.run",
          "group": "navigation@0"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.magmaLoader.run",
        "key": "F5",
        "when": "editorTextFocus && editorLangId == 'magma'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "glob": "^10.4.3"
  }
}
