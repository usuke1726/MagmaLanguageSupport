{
  "name": "magma-language-support",
  "displayName": "MAGMA Language Support",
  "description": "%extension.description%",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "usuke1726",
  "private": true,
  "icon": "images/magma-icon.png",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "magma",
        "aliases": [
          "Magma",
          "magma"
        ],
        "extensions": [
          ".m",
          ".mag",
          ".magma",
          "..magmarc",
          "..magmarc-dev"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "spec",
        "aliases": [
          "Magma Spec",
          "spec"
        ],
        "extensions": [
          ".spec"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "magma",
        "scopeName": "source.magma",
        "path": "./syntaxes/magma.tmLanguage"
      },
      {
        "language": "spec",
        "scopeName": "source.magma.spec",
        "path": "./syntaxes/spec.tmLanguage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MAGMA Language Support",
      "properties": {
        "MagmaLanguageSupport.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableAutoCompletion%"
        },
        "MagmaLanguageSupport.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableHover%"
        },
        "MagmaLanguageSupport.enableDifinition": {
          "type": "boolean",
          "default": true,
          "description": "%config.enableDifinition%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  }
}
